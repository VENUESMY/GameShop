<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.DeveloperFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/DeveloperFragmentDeveloperNameTVTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Имя:" />

        <TextView
            android:id="@+id/DeveloperFragmentDeveloperNameTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Тут имя" />

        <TextView
            android:id="@+id/DeveloperFragmentDescriptionNameTVTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Описание:" />

        <TextView
            android:id="@+id/DeveloperFragmentDescriptionNameTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Тут описание" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/DeveloperFragmentGamesRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </LinearLayout>
</FrameLayout>